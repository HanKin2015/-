<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical" 
    android:id="@+id/land_window"
    android:clickable="true"
    >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@drawable/logo" />
    
    <TextView
        android:id="@+id/textView1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:text="@string/title" />
    
	<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_margin="10dp"
    android:background="@drawable/stysle"
    android:orientation="horizontal" >

		<ImageView
		    android:id="@+id/imageView2"
		    android:layout_width="30dp"
		    android:layout_height="30dp"
		    android:layout_gravity="center"
		    android:alpha="1"
		    android:src="@drawable/user" />

		<EditText
		    android:id="@+id/name_et"
		    android:layout_width="0dp"
	    	android:layout_height="40dp"
	    	android:layout_weight="15"
		    android:background="@null"
		    android:ems="10"
		    android:hint="请输入用户名" 
		    >
		    <requestFocus />
		    </EditText>
		
		<ImageView android:id="@+id/name_iv"
	        android:layout_width="0dp"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="1"
	    	android:gravity="center"
	    	android:src="@drawable/cancel"
	    	android:visibility="invisible" 
	    	/>
	</LinearLayout>
	
	<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/stysle"
    android:orientation="horizontal" >

		<ImageView
		    android:id="@+id/imageView3"
		    android:layout_width="30dp"
		    android:layout_height="30dp"
		    android:layout_gravity="center"
		    android:alpha="1"
		    android:src="@drawable/suo" />
		
    	<EditText
        	android:id="@+id/pwd_et"
        	android:layout_width="0dp"
	    	android:layout_height="40dp"
	    	android:layout_weight="15"
        	android:background="@null"
        	android:hint="请输入密码"
        	android:inputType="textPassword" >
    	</EditText>
    	
    	<ImageView android:id="@+id/pwd_iv"
	        android:layout_width="0dp"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="1"
	    	android:gravity="center"
	    	android:src="@drawable/cancel"
	    	android:visibility="invisible" />
	</LinearLayout>
	
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:layout_margin="10dp"
		>
    	
	    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="记住密码" />

	    <TextView
	        android:id="@+id/forget_pw"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/checkBox"
	        android:layout_alignBottom="@+id/checkBox"
	        android:layout_alignParentRight="true"
	        android:text="忘记密码"
	        android:textColor="#FFFFFF"
	        android:textSize="15sp" />

	</RelativeLayout>
	<Button
	        android:id="@+id/bt_land"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_gravity="center"
	        android:layout_width="150dp"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:textSize="20sp"
	        android:background="@drawable/stysle"
	        android:text="登陆" />

	<TextView
	    android:id="@+id/new_user"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:gravity="center"
	    android:text="你还没有账号吧！"
	    android:textColor="#ffffff"
	    android:textSize="15sp" />

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:orientation="vertical"
	    android:gravity="center_horizontal"
	    android:layout_marginTop="90dp"
	    >
	<TextView
	    android:id="@+id/textView2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="10sp"
	    android:textColor="#FFFFFF"
	    android:text="@string/school1" />
	<TextView
	    android:id="@+id/textView3"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="10sp"
	    android:textColor="#FFFFFF"
	    android:text="@string/school2" />
	<TextView
	    android:id="@+id/textView4"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="10sp"
	    android:textColor="#FFFFFF"
	    android:text="@string/school3" 
	    />
	</LinearLayout>
</LinearLayout>
