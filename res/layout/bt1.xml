<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/bg"
    >

    <TextView 
        android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="6"
    	android:gravity="center"
    	android:textColor="#ffffff"
    	android:text="东北大学秦皇岛分校\n欢迎进入设备巡检系统"
        />
    
    <LinearLayout 
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1"
    	android:orientation="horizontal"
    	android:gravity="bottom"
        >
 		<LinearLayout 
 		    android:layout_width="0dp"
    		android:layout_height="match_parent"
    		android:layout_weight="1"
    		android:orientation="vertical"
 		    >
 		    <ImageButton
 		        android:id="@+id/ib1"
 		        android:background="@null"
 		        android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_gravity="center"
    			android:src="@drawable/tongzhi"
 		        />
 		    <TextView 
 		        android:layout_marginTop="10dp"
 		        android:layout_gravity="center"
 		        android:textColor="#ffffff"
 		        android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:text="最新通知"
 		        />
 		</LinearLayout>
 		<LinearLayout 
 		    android:layout_width="0dp"
    		android:layout_height="match_parent"
    		android:layout_weight="1"
    		android:orientation="vertical"
 		    >
 		    <ImageButton
 		        android:id="@+id/ib2"
 		        android:background="@null"
 		        android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_gravity="center"
    			android:src="@drawable/jihua"
 		        />
 		    <TextView 
 		        android:layout_marginTop="10dp"
 		        android:layout_gravity="center"
 		        android:textColor="#ffffff"
 		        android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:text="工作计划"
 		        />
 		</LinearLayout>
 		<LinearLayout 
 		    android:layout_width="0dp"
    		android:layout_height="match_parent"
    		android:layout_weight="1"
    		android:orientation="vertical"
 		    >
 		    <ImageButton
 		        android:id="@+id/ib3"
 		        android:background="@null"
 		        android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_gravity="center"
    			android:src="@drawable/fenxi"
 		        />
 		    <TextView 
 		        android:layout_marginTop="10dp"
 		        android:layout_gravity="center"
 		        android:textColor="#ffffff"
 		        android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:text="数据分析"
 		        />
 		</LinearLayout>
 		<LinearLayout 
 		    android:layout_width="0dp"
    		android:layout_height="match_parent"
    		android:layout_weight="1"
    		android:orientation="vertical"
 		    >
 		    <ImageButton
 		        android:id="@+id/ib4"
 		        android:background="@null"
 		        android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_gravity="center"
    			android:src="@drawable/youjian"
 		        />
 		    <TextView 
 		        android:layout_marginTop="10dp"
 		        android:layout_gravity="center"
 		        android:textColor="#ffffff"
 		        android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:text="收发邮件"
 		        />
 		</LinearLayout>
    </LinearLayout>
	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1"
    	android:orientation="horizontal"
        >
 		<LinearLayout 
 		    android:layout_width="0dp"
    		android:layout_height="match_parent"
    		android:layout_weight="1"
    		android:orientation="vertical"
 		    >
 		    <ImageButton
 		        android:id="@+id/ib5"
 		        android:background="@null"
 		        android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_gravity="center"
    			android:src="@drawable/shangchuan"
 		        />
 		    <TextView 
 		        android:layout_marginTop="10dp"
 		        android:layout_gravity="center"
 		        android:textColor="#ffffff"
 		        android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:text="上传数据"
 		        />
 		</LinearLayout>
 		<LinearLayout 
 		    android:layout_width="0dp"
    		android:layout_height="match_parent"
    		android:layout_weight="1"
    		android:orientation="vertical"
 		    >
 		    <ImageButton
 		        android:id="@+id/ib6"
 		        android:background="@null"
 		        android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_gravity="center"
    			android:src="@drawable/location"
 		        />
 		    <TextView 
 		        android:layout_marginTop="10dp"
 		        android:layout_gravity="center"
 		        android:textColor="#ffffff"
 		        android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:text="拍照上传"
 		        />
 		</LinearLayout>
 		<LinearLayout 
 		    android:layout_width="0dp"
    		android:layout_height="match_parent"
    		android:layout_weight="1"
    		android:orientation="vertical"
 		    >
 		    <ImageButton
 		        android:id="@+id/ib7"
 		        android:background="@null"
 		        android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_gravity="center"
    			android:src="@drawable/ditu"
 		        />
 		    <TextView 
 		        android:layout_marginTop="10dp"
 		        android:layout_gravity="center"
 		        android:textColor="#ffffff"
 		        android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:text="通讯录"
 		        />
 		</LinearLayout>
 		<LinearLayout 
 		    android:layout_width="0dp"
    		android:layout_height="match_parent"
    		android:layout_weight="1"
    		android:orientation="vertical"
 		    >
 		    <ImageButton
 		        android:id="@+id/ib8"
 		        android:background="@null"
 		        android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_gravity="center"
    			android:src="@drawable/ser"
 		        />
 		    <TextView 
 		        android:layout_marginTop="10dp"
 		        android:layout_gravity="center"
 		        android:textColor="#ffffff"
 		        android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:text="我的客服"
 		        />
 		</LinearLayout>
    </LinearLayout>
    <LinearLayout 
 		android:layout_width="wrap_content"
    	android:layout_height="0dp"
    	android:layout_weight="2"
        ></LinearLayout>
</LinearLayout>
